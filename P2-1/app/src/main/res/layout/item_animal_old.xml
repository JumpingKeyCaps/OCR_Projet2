<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:tools="http://schemas.android.com/tools"
android:background="?android:attr/selectableItemBackground"
android:orientation="horizontal"
android:padding="16dp">

<!-- TODO: A complÃ©ter -->

    <!--old version with LinearLayout -->

<!-- Avatar of the animal -->
<ImageView
    android:id="@+id/avatar"
    android:layout_gravity="top"
    android:layout_width="68dp"
    android:layout_height="68dp"
    android:layout_margin="8dp"
    tools:src="@tools:sample/avatars"
    android:scaleType="centerInside"
    android:contentDescription="@string/avatar_image_content_description" />
<!-- All texts of the line -->
<LinearLayout
    android:id="@+id/CorpLineLayout"
    android:layout_gravity="top"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- Animal Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:typeface="sans"
        tools:text="@tools:sample/full_names" />
    <!-- Animal Informations -->
    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
        android:textColor="@color/material_on_background_emphasis_medium"
        android:typeface="normal"
        tools:text="@tools:sample/lorem/random" />
</LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>